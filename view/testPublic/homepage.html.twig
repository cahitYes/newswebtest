        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="trending__product">
                        <div class="row">
                            <div class="col-lg-8 col-md-8 col-sm-8">
                                <div class="section-title">
                                    <h4>Trending Now</h4>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-4">

                            </div>
                        </div>
                        <div class="row">
                            {% for article in lastArticles %}
                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="product__item">

                                    <div class="product__item__pic set-bg" data-setbg="images/1.jpg">

                                    </div>
                                    <h6><a href="?article={{ article.thearticleslug }}">{{ article.thearticletitle|raw }}</a></h6>
                                    <div class="product__item__text">
                                        <p>{{ article.thearticleresume|raw }}</p>
                                        <p>Nombre de commentaires : {{ article.nbcomment }}</p>
                                        <a href="?article={{ article.thearticleslug }}" class="rm">En savoir plus...</a>
                                        <p>Post√© par : <a href="?user={{ article.idtheuser }}">{{ article.theuserlogin }}</a>
                                            le {{ article.thearticledate|date('d/m/Y') }}</p>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>

                </div>
