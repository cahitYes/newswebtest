{% extends 'base.html.twig' %}

{% block title %}NewsWeb | {% endblock %}

{% block meta %}{{ parent() }}
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="css/style.css"/>
    <link rel="stylesheet" href="css/nivo-slider.css" type="text/css" media="screen"/>
    <link rel="stylesheet" href="css/default/default.css" type="text/css" media="screen"/>
    <!-- Librairie d'icônes -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">{% endblock %}

{% block body %}
    <div id="wrapper">
        {# On va créer les différentes zones modifiables du template dans le bloc body #}
        {% block logo %}{% endblock %}
        {% block nav %} {% include "public/menu.html.twig" %} {% endblock %}
        {% block slider %}{% endblock %}
        {% block main %}{% endblock %}
        {% block footer %}
            <footer>
                <p>Design modifié pour un exercice de mise en page HTML/CSS</p>
                <p>Copyright &copy 2013 Source X by Youssef Nassim and Zakariya Lhamri, design from <a
                            href="http://geeksband.com" target="_blank">Geeksband.com</a>. All Rights Reserved.</p>
            </footer>{% endblock %}
    </div>
{% endblock %}


{% block javascripts %}
    <!-- Lien vers le CDN (Content Delivery Network) pour le jQuery -->
    <!-- D'abord la librairie jQuery -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <!-- Ensuite le plugin utilisant jQuery : ici, c'est le slider -->
    <script src="js/jquery.nivo.slider.pack.js" type="text/javascript"></script>

    <!-- Commentaire conditionnel pour les navigateurs Internet Explorer avant la version 9 (par exemple: IE8, IE7,...) c'est-à-dire avant 2011 -->
    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <script>
        $(window).load(function () {
            $('#slider').nivoSlider({pauseTime: 6000,});
        });
    </script>
    <!-- Toggle between adding and removing the "responsive" class to topnav when the user clicks on the icon -->
    <script>
        function hamburger() {
            var x = document.getElementById("topnav");
            if (x.className === "topnav") {
                x.className += " responsive";
            } else {
                x.className = "topnav";
            }
        }
    </script>
{% endblock %}